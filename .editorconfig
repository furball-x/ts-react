# editorconfig.org

root = true

[*]
charset = utf-8

# 缩进的大小
# tab_width: 设置整数用于指定替代tab的列数。默认值就是indent_size的值，一般无需指定。
indent_size = 2


# 缩进的类型 [space | tab]
indent_style = space

# 文件是否以一个空白行结尾 [true | false]
insert_final_newline = true

# 是否除去换行行首的任意空白字符
trim_trailing_whitespace = true


[*.md]
trim_trailing_whitespace = false
